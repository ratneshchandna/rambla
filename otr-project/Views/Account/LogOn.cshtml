<!------ Facebook Logon ------>
<div class="container">
    <div class="row">
        <div class="span6 offset3 center">
            <h1>Login to Rambla</h1>
            <form class="form-vertical well" method="post">
                <div class="controls">
                    <fb:login-button size="xlarge" perms="email,user_birthday,user_likes,user_education_history,user_hometown,user_interests,user_activities,user_location">Login with Facebook</fb:login-button>
                </div>
                <div class="span2"><hr /></div>
                <div class="span1 tpad10"><h4><em>Or</em></h4></div>
                <div class="span2"><hr /></div>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email Address", @class = "span4 input-fatty" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <div class="controls">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", type = "password", @class = "span4 input-fatty" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                @Html.ValidationSummary(true)
                <div class="controls tpad20">
                    <button id="LoginButton" class="btn btn-large btn-primary" type="submit" style="width:70%">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>